# ================================================================
# POLYMARKET COPY TRADING BOT - RENDER DEPLOYMENT
# Minimal environment variables for web-based configuration
# ================================================================

# ================================================================
# INFRASTRUCTURE (Required for deployment)
# ================================================================

# Database connection (REQUIRED)
MONGO_URI='your-mongodb-connection-string-here'

# Polymarket API endpoints (REQUIRED - DO NOT CHANGE)
CLOB_HTTP_URL='https://clob.polymarket.com/'
CLOB_WS_URL='wss://ws-subscriptions-clob.polymarket.com/ws'
USDC_CONTRACT_ADDRESS='0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174'

# ================================================================
# API SERVER CONFIGURATION (Required for web interface)
# ================================================================

# Enable API server
ENABLE_API=true

# JWT Secret for authentication (REQUIRED - Generate a secure random string)
JWT_SECRET='your-super-secure-jwt-secret-change-in-production'

# Server configuration
API_PORT=10000
API_HOST=0.0.0.0

# CORS - Allow your frontend domain (update for production)
CORS_ORIGIN='*'

# API Documentation
ENABLE_API_DOCS=true

# ================================================================
# OPTIONAL - Will be configured via web interface
# ================================================================

# These can be left empty - users will configure via /api/config/setup
# USER_ADDRESSES=''          # Traders to copy (web-configured)
# PROXY_WALLET=''            # User wallet (web-configured)
# PRIVATE_KEY=''             # Private key (web-configured)
# RPC_URL=''                 # RPC endpoint (web-configured)
# TRADE_MULTIPLIER=''        # Trading settings (web-configured)

# ================================================================
# RENDER-SPECIFIC SETTINGS
# ================================================================

# Node environment
NODE_ENV=production

# Disable local CLI setup (users configure via web)
DISABLE_CLI_SETUP=true